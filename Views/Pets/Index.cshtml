@model IEnumerable<ShelterAPI.Models.Pet>

@{
    ViewBag.Title = "Pets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h-serif-flex"><img class="icon-sub-content" src="~/Content/Icons/animals-icon.png" alt="animals-icon" width="60" height="60">&emsp;<strong>All animals</strong></h1>

<input type="button" class="btn btn-info" value="Add new" onclick="location.href='@Url.Action("New", "Pets")'" />
<br /><br />
<div class="container container-profiles">
    <div class="row">
            @if (!Model.Any())
            {
                <p>We don't have any pets!</p>
            }
            else
            {
                <div class="row">
                    @foreach (var pet in Model)
                    {
                        <div class="col-xs-12 col-sm-6 col-lg-4">

                            <img class="profile-content-right" src="~/PetPics/@pet.PhotoPath" alt="@pet.PetName Photo" height="200" width="300">
                            <div class="inner-profile-content">
                                <div class="text-inner-profile-content">
                                    <h2>@pet.PetName</h2>
                                    <p>In shelter from @pet.AddedDate.Value.ToShortDateString()</p>
                                    <input type="button" class="btn btn-info" value="Adopt" onclick="location.href='@Url.Action("Edit", "Pets",new { id = pet.Id }, null)'" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
    </div>
</div>

