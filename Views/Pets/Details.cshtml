@model ShelterAPI.Models.Pet
@{
    ViewBag.Title = Model.PetName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container container-profiles">
        <div class="row">
            <div class="col-xs-12 col-sm-7 col-lg-8 inner-profiles">

                <h3 class="h-serif-flex"><img class="icon-sub-content" src="~/Content/Icons/dog-face-icon.png" alt="dog-icon" width="45" height="45">&emsp;<strong>@Model.PetName</strong></h3>
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-md-push-6 col-lg-5 col-lg-push-7">
                        <div class="prof-img-sub-content gallery-group">
                            <span class="fa fa-search" aria-hidden="true"></span>
                            <a href="~/PetPics/@Model.PhotoPath" class="thumbnail">
                                <img src="~/PetPics/@Model.PhotoPath" alt="Photo of @Model.PetName">
                            </a>
                            <div class='oss-widget-interface'></div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-md-pull-6 col-lg-7 col-lg-pull-5 profile-description-sub-content">
                        @Model.Description
                        <br><br>
                        <table class="table table-profile-description">
                            <tr>
                                <td class="text-right">Nr. id</td>
                                <td><strong>@Model.Id</strong></td>
                            </tr>
                            <tr>
                                <td class="text-right">In shelter from</td>
                                <td><strong>@Model.AddedDate.Value.ToShortDateString()</strong></td>
                            </tr>
                            <tr>
                                <td class="text-right">Category</td>
                                <td><strong>@Model.Species</strong></td>
                            </tr>
                        </table>
                        <p class="buttons-profile-description">

                            <input type="button" class="btn btn-info" value="Edit" onclick="location.href='@Url.Action("Edit", "Pets",new { id = Model.Id }, null)'" />
                            <button type="button" data-toggle="modal" data-target="#modal-form" class="btn btn-default btn-profile-ask">ASK FOR THIS PET! <span class="fa fa-search" aria-hidden="true"></span></button>
                        </p>

                    </div>
                </div>
            </div>

        </div>
    </div>