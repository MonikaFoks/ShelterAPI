@using ShelterAPI.Models
@model ShelterAPI.Models.Employee
@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("Authorize", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label>Login:</label>
        <br />
        @Html.EditorFor(m => m.Login, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Login)
    </div>
    <div class="form-group">
        <label>Password:</label>
        <br />

        @Html.EditorFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <br />
    <tr>
        <td colspan="2">
            <label class="field-validation-error">@Html.DisplayFor(m=>m.LoginErrorMessage)</label>
        </td>
    </tr>
    <br />

    <button type="submit" class="btn btn-primary">Log in</button>
}